@model Vali_main_.Models.TDanhMucSp

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Dashboard", "Index", "Home")
            
        </li>
        <li class="breadcrumb-item">
            @Html.ActionLink("Quản lý Sản phẩm", "Index", "QLSanphams")
        </li>
        <li class="breadcrumb-item active">Thêm sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Create">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Thông tin sản phẩm</th>
                            <th>Giá trị</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><label asp-for="MaSp" class="control-label"></label></td>
                            <td>
                                <input asp-for="MaSp" class="form-control" />
                                <span asp-validation-for="MaSp" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="TenSp" class="control-label"></label></td>
                            <td>
                                <input asp-for="TenSp" class="form-control" />
                                <span asp-validation-for="TenSp" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>Chất liệu</td>
                            <td>
                                <select asp-for="MaChatLieu" class="form-control" asp-items="ViewBag.MaChatLieu"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>Ngăn Laptop</td>
                            <td>
                                <input asp-for="NganLapTop" class="form-control" />
                                <span asp-validation-for="NganLapTop" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>Hãng sản xuất</td>
                            <td>
                                <select asp-for="MaHangSx" class="form-control" asp-items="ViewBag.MaHangSx"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>Nước sản xuất</td>
                            <td>
                                <select asp-for="MaNuocSx" class="form-control" asp-items="ViewBag.MaNuocSx"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>Đặc tính</td>
                            <td>
                                <input asp-for="MaDacTinh" class="form-control" />
                                <span asp-validation-for="MaDacTinh" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="Website" class="control-label"></label></td>
                            <td>
                                <input asp-for="Website" class="form-control" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="ThoiGianBaoHanh" class="control-label"></label></td>
                            <td>
                                <input asp-for="ThoiGianBaoHanh" class="form-control" />
                                <span asp-validation-for="ThoiGianBaoHanh" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="GioiThieuSp" class="control-label"></label></td>
                            <td>
                                <input asp-for="GioiThieuSp" class="form-control" />
                                <span asp-validation-for="GioiThieuSp" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="ChietKhau" class="control-label"></label></td>
                            <td>
                                <input asp-for="ChietKhau" class="form-control" />
                                <span asp-validation-for="ChietKhau" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>Loại sản phẩm</td>
                            <td>
                                <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>Đối tượng</td>
                            <td>
                                <select asp-for="MaDt" class="form-control" asp-items="ViewBag.MaDt"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.AnhDaiDien, htmlAttributes: new {@class = "control-label"})
                            </td>
                            <td>
                                <img id="output" class="img-rounded" alt="Ảnh đại diện" width="180" src="~/Images/no-image-news.png" />
                                <p><label for="ufile" style="cursor: pointer;">Chọn file ảnh</label></p>
                                <input name="ImageFile" id="ufile" type="file" style="display: none" onchange="loadFile(event)" />
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="GiaNhoNhat" class="control-label"></label></td>
                            <td>
                                <input asp-for="GiaNhoNhat" class="form-control" />
                                <span asp-validation-for="GiaNhoNhat" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="GiaLonNhat" class="control-label"></label></td>
                            <td>
                                <input asp-for="GiaLonNhat" class="form-control" />
                                <span asp-validation-for="GiaLonNhat" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">
                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                <a asp-action="Index"><i class="fa-solid fa-arrow-left btn btn-primary"  style="font-size: 23px " title="Trở lại"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    }
</script>