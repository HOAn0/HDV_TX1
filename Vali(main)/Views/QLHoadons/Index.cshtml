@model IEnumerable<Vali_main_.Models.THoaDonBan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Dashboard", "Index", "Home")
        </li>
        <li class="breadcrumb-item active">Quản lý Hóa đơn</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <span><i class="fa-solid fa-suitcase"></i>Hóa đơn</span>
            <p>
                <a asp-action="Create"><i class="fa-solid fa-square-plus btn btn-success" style="20px" title="Thêm hóa đơn"></i></a>
            </p>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayHoaDon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TongTienHd)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhuongThucThanhToan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaKhachHangNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaNhanVienNavigation)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayHoaDon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TongTienHd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhuongThucThanhToan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenKhachHang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNhanVienNavigation.TenNhanVien)
                            </td>
                            <td>
                                <div> <a asp-action="Edit" asp-route-id="@item.MaHoaDon"><i class="fa-solid fa-pen-to-square btn btn-warning" title="Sửa"></i></a></div>
                                <div><a asp-action="Details" asp-route-id="@item.MaHoaDon"><i class="fa-solid fa-circle-info btn btn-info" title="Chi tiết"></i></a></div>
                                <div><a asp-action="Delete" asp-route-id="@item.MaHoaDon"><i class="fa-solid fa-trash btn btn-danger" title="Xóa"></i></a></div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/js/simple-database.js"></script>
