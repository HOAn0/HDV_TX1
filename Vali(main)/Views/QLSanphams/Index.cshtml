@model IEnumerable<Vali_main_.Models.TDanhMucSp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Dashboard", "Index", "Home")
        </li>
        <li class="breadcrumb-item active">Quản lý Sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <span><i class="fa-solid fa-suitcase"></i> Sản phẩm</span>
            <p>
                <a asp-action="Create"><i class="fa-solid fa-square-plus btn btn-success" style="20px" title="Thêm sản phẩm"></i></a>
            </p>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenSp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CanNang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DoNoi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGianBaoHanh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AnhDaiDien)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GiaNhoNhat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GiaLonNhat)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CanNang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoNoi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
                            </td>
                            <td>
                                <img src="~/Images/@item.AnhDaiDien" alt="Ảnh đại diện" style="width:180px; height: auto" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaLonNhat)
                            </td>
                            <td>
                                <div class="icon-function">
                                    <div> <a asp-action="Edit" asp-route-id="@item.MaSp"><i class="fa-solid fa-pen-to-square btn btn-warning" title="Sửa"></i></a></div>
                                    <div><a asp-action="Details" asp-route-id="@item.MaSp"><i class="fa-solid fa-circle-info btn btn-info" title="Chi tiết"></i></a></div>
                                    <div><a asp-action="Delete" asp-route-id="@item.MaSp"><i class="fa-solid fa-trash btn btn-danger" title="Xóa"></i></a></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
<script src="~/js/simple-database.js"></script>